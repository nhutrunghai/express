mixin mixins-product(Products)
    .row
        each value of Products
            .col-md-2.mb-2
                .card.shadow-sm.h-100
                    img.card-img-top(src="https://cdn-images.vtv.vn/2019/10/10/photo-1-15706463929181755249740.jpg", alt="Sản phẩm 1")
                    .card-body
                        h5.card-title #{value.title}
                        p.card-text.text-muted Mô tả ngắn gọn về sản phẩm.
                        
                        // Giá sau giảm giá
                        .d-flex.justify-content-between.align-items-center
                            span.price-new.font-weight-bold.text-success $#{value.newPrice}
                            
                        // Giá trước giảm giá (gạch ngang)
                        .d-flex.justify-content-between.align-items-center
                            span.price-old.text-muted.text-decoration-line-through $#{value.price}
                            
                        a.btn.btn-primary(href="#") Xem chi tiết