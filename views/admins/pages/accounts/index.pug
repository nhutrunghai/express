extends ../../layout/dashboard.pug

block main
  .container.mt-5
    h1 Quản trị người dùng

    //- Nút Thêm mới
    a.btn.btn-primary(href=`./users/create`) Thêm mới

    //- Bảng danh sách người dùng
    table.table.table-striped.mt-4
      thead
        tr
          th STT
          th Tên
          th Email
          th Quyền
          th Trạng thái
          th Thao tác
      tbody
        each account,index in accounts
          tr
            td #{index}
            td #{account.fullName}
            td #{account.email}
            td #{account.role}
            td #{account.status == 'active' ? 'hoạt động' : 'dừng'}
            td
              a.btn.btn-warning(href=`/user/edit/${account._id}`) Chỉnh sửa
              a.btn.btn-danger.ml-2(href=`/user/delete/${account._id}`) Xóa
