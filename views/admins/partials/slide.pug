style.
  #admin-sidebar-nav {
    --radius: 12px;
  }
  #admin-sidebar-nav .section-title {
    font-size: .8rem;
    text-transform: uppercase;
    letter-spacing: .04em;
  }
  #admin-sidebar-nav .menu-item {
    border-radius: var(--radius);
    padding: .6rem .8rem;
    color: #34495e;
    background: #ffffff;
    margin-bottom: .4rem;
    box-shadow: 0 0 0 rgba(0,0,0,0);
    transition: transform .15s ease, 
                box-shadow .2s ease, 
                background .15s ease, 
                color .15s ease;
    display: flex; align-items: center;
  }
  #admin-sidebar-nav .menu-item i {
    font-size: 1.05rem; opacity: .9;
  }
  #admin-sidebar-nav .menu-item:hover {
    transform: translateY(-1px);
    box-shadow: 0 6px 16px rgba(20,20,43,.12), 0 2px 6px rgba(20,20,43,.06);
    background: #f8fbff;
    color: #0d6efd;
  }
  #admin-sidebar-nav .menu-item:hover i {
    opacity: 1;
  }
  #admin-sidebar-nav .menu-item.active {
    background: #e7f1ff;
    color: #0b5ed7;
    box-shadow: inset 0 0 0 1px rgba(13,110,253,.25), 0 4px 10px rgba(13,110,253,.12);
  }
  #admin-sidebar-nav .menu-item.active i {
    color: #0b5ed7;
  }

nav#admin-sidebar-nav.nav.flex-column.p-3
  // Dashboard
  a.nav-link.menu-item(href=`/${pathAdmin}/dashboard`, class=(activePage === 'dashboard' ? 'active' : ''))
    i.bi.bi-speedometer2.me-2
    span Dashboard

  // Quản lý sản phẩm
  if( user.role_id.permission.includes('products-view') || user.role_id.permission.includes('products-category-view') )
    h6.text-muted.section-title.mt-3.mb-2 Quản lý sản phẩm
      if( user.role_id.permission.includes('products-view'))
        a.nav-link.menu-item(href=`/${pathAdmin}/products`, class=(activePage === 'products' ? 'active' : ''))
          i.bi.bi-box-seam.me-2
          span Danh sách sản phẩm
      if( user.role_id.permission.includes('products-category-view'))
        a.nav-link.menu-item(href=`/${pathAdmin}/categories`, class=(activePage === 'categories' ? 'active' : ''))
          i.bi.bi-tags.me-2
          span Danh mục sản phẩm

  // Quản lý đơn hàng
  h6.text-muted.section-title.mt-3.mb-2 Quản lý đơn hàng
  a.nav-link.menu-item(href=`/${pathAdmin}/orders`, class=(activePage === 'orders' ? 'active' : ''))
    i.bi.bi-cart-check.me-2
    span Đơn hàng
  a.nav-link.menu-item(href=`/${pathAdmin}/customers`, class=(activePage === 'customers' ? 'active' : ''))
    i.bi.bi-people.me-2
    span Khách hàng

  // Nội dung
  h6.text-muted.section-title.mt-3.mb-2 Nội dung
  a.nav-link.menu-item(href=`/${pathAdmin}/posts`, class=(activePage === 'posts' ? 'active' : ''))
    i.bi.bi-file-text.me-2
    span Bài viết / Tin tức
  a.nav-link.menu-item(href=`/${pathAdmin}/banners`, class=(activePage === 'banners' ? 'active' : ''))
    i.bi.bi-image.me-2
    span Banner / Quảng cáo

  // Hệ thống
  h6.text-muted.section-title.mt-3.mb-2 Hệ thống
  a.nav-link.menu-item(href=`/${pathAdmin}/users`, class=(activePage === 'users' ? 'active' : ''))
    i.bi.bi-person-gear.me-2
    span Quản lý user
  a.nav-link.menu-item(href=`/${pathAdmin}/settings`, class=(activePage === 'settings' ? 'active' : ''))
    i.bi.bi-gear.me-2
    span Cấu hình

  // Logout
  a.nav-link.menu-item.mt-4.text-danger(href=`/${pathAdmin}/auth/logout`)
    i.bi.bi-box-arrow-right.me-2
    span Đăng xuất
